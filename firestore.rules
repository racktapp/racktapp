rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for any signed-in user.
    // This is a temporary, permissive rule for debugging and unblocking the app.
    // Please tighten these rules for production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
