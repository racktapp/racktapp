
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Utility Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isParticipant() {
        return request.auth.uid in resource.data.participantIds;
    }
    
    function isSenderOrReceiver() {
        return request.auth.uid == resource.data.fromId || request.auth.uid == resource.data.toId;
    }

    // --- User Profiles ---
    // Users can read any profile (for leaderboards, friend searches, etc.)
    // Users can only create, update, and delete their own profile document.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
      
      // Practice sessions are private to the user
      match /practiceSessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }
    }

    // --- Friend Requests ---
    // You can interact with a request if you sent it or received it.
    match /friendRequests/{requestId} {
      allow read, delete: if isSignedIn() && isSenderOrReceiver();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.fromId;
    }

    // --- Challenges ---
    // You can interact with a challenge if you sent it or received it.
    match /challenges/{challengeId} {
      allow read, delete: if isSignedIn() && isSenderOrReceiver();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.fromId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.toId; // Only recipient can accept/decline
    }

    // --- Open Challenges ---
    // Anyone can read open challenges. Only the poster can delete their own.
    match /openChallenges/{challengeId} {
        allow read, create: if isSignedIn();
        allow delete: if isSignedIn() && isOwner(resource.data.posterId);
    }
    
    // --- Matches ---
    // You can read or update a match if you are a participant.
    match /matches/{matchId} {
      allow read, update: if isSignedIn() && isParticipant();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
    }

    // --- Chats & Messages ---
    // You can read or write to a chat if you are a participant.
    match /chats/{chatId} {
      allow read, update: if isSignedIn() && isParticipant();
      
      match /messages/{messageId} {
        // You can read messages in a chat you are part of.
        allow read: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds.hasAny([request.auth.uid]);
        // You can only create messages as yourself in a chat you are part of.
        allow create: if isSignedIn() && isOwner(request.resource.data.senderId) && get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds.hasAny([request.auth.uid]);
      }
    }
    
    // --- Tournaments ---
    // Anyone can read tournaments. Only the organizer can update them.
    match /tournaments/{tournamentId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn() && isOwner(resource.data.organizerId);
    }

    // --- AI Games (Rally & Legend) ---
    // You can access a game if you are a participant.
    match /rallyGames/{gameId} {
      allow read, write: if isSignedIn() && isParticipant();
    }
    match /legendGames/{gameId} {
      allow read, write: if isSignedIn() && isParticipant();
    }
    
    // --- Reports ---
    // Any signed-in user can create a report.
    match /reports/{reportId} {
        allow create: if isSignedIn();
    }
  }
}
