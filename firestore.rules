
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // USERS
    // - Allow users to read their own data.
    // - Allow users to update their own data.
    // - Allow anyone to read public profiles.
    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // FRIEND REQUESTS
    // - Allow users to create friend requests.
    // - Allow users to read requests sent to them.
    // - Allow users to delete requests they sent.
    match /friendRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (request.auth.uid == resource.data.fromId || request.auth.uid == resource.data.toId);
    }
    
    // CHALLENGES
    // - Allow users to create challenges.
    // - Allow users to read/update challenges they are part of.
    match /challenges/{challengeId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.fromId || request.auth.uid == resource.data.toId);
    }

    // OPEN CHALLENGES
    // - Allow any authenticated user to read open challenges.
    // - Allow authenticated users to create open challenges.
    // - Allow the user who posted it to delete it.
    match /openChallenges/{challengeId} {
        allow read, create: if request.auth != null;
        allow delete: if request.auth != null && request.auth.uid == resource.data.posterId;
    }
    
    // MATCHES
    // - Allow users to read matches they participated in.
    // - Allow users to create new (pending) matches.
    // - Allow participants to update (confirm) a match.
    match /matches/{matchId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participants;
    }

    // TOURNAMENTS
    // - Allow any authenticated user to create a tournament.
    // - Allow participants to read a tournament.
    // - Allow only the organizer to update a tournament.
    match /tournaments/{tournamentId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && request.auth.uid in resource.data.participantIds;
        allow update: if request.auth != null && request.auth.uid == resource.data.organizerId;
    }

    // CHATS & MESSAGES
    // - Allow participants to read/write to a chat and its messages.
    match /chats/{chatId} {
      allow read, update, create: if request.auth != null && request.auth.uid in resource.data.participantIds;

      match /messages/{messageId} {
        allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
      }
    }
    
    // RALLY & LEGEND GAMES
    // - Allow participants to read/update their games.
    match /rallyGames/{gameId} {
        allow read, create, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
        allow delete: if request.auth != null && request.auth.uid in resource.data.participantIds;
    }

    match /legendGames/{gameId} {
        allow read, create, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
        allow delete: if request.auth != null && request.auth.uid in resource.data.participantIds;
    }

    // PRACTICE SESSIONS
    // - Allow users to list their own sessions.
    // - Allow users to get, create, update, or delete their own sessions.
    match /practiceSessions/{sessionId} {
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // REPORTS
    // - Allow authenticated users to create reports.
    match /reports/{reportId} {
      allow create: if request.auth != null;
    }
  }
}
