rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Utility Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isParticipant(resource) {
        return request.auth.uid in resource.data.participantIds;
    }

    // --- User Profiles ---
    // Anyone can read user profiles for leaderboards, friend searches etc.
    // Users can only create, update, or delete their own profile.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner(userId);

      // Practice sessions are private to the user
      match /practiceSessions/{sessionId} {
        allow read, write, create, delete: if isOwner(userId);
      }
    }

    // --- Friend Requests ---
    // You can interact with a request if you sent it or received it.
    match /friendRequests/{requestId} {
      allow read, delete: if isSignedIn() && (request.auth.uid == resource.data.fromId || request.auth.uid == resource.data.toId);
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.fromId;
    }

    // --- Challenges ---
    // You can interact with a challenge if you sent or received it.
    match /challenges/{challengeId} {
      allow read, delete: if isSignedIn() && (request.auth.uid == resource.data.fromId || request.auth.uid == resource.data.toId);
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.fromId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.toId; // Only recipient can accept/decline
    }

    // --- Open Challenges ---
    // Any signed-in user can read all open challenges.
    // Only the poster can delete their own open challenge.
    match /openChallenges/{challengeId} {
        allow read, create: if isSignedIn();
        allow delete: if isSignedIn() && isOwner(resource.data.posterId);
    }

    // --- Matches ---
    // You can read or update a match if you are a participant.
    // A match can be created if the requesting user is a participant.
    match /matches/{matchId} {
      allow read, update: if isSignedIn() && isParticipant(resource);
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
    }

    // --- Chats & Messages ---
    // You can interact with a chat if you are a participant.
    match /chats/{chatId} {
      allow read, update: if isSignedIn() && isParticipant(resource);

      // Messages can be read/created by participants of the parent chat.
      match /messages/{messageId} {
        allow read: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds.hasAny([request.auth.uid]);
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.senderId;
      }
    }

    // --- Tournaments ---
    // Any signed-in user can read or create a tournament.
    // Only the organizer can update a tournament (e.g., report winners).
    match /tournaments/{tournamentId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn() && isOwner(resource.data.organizerId);
    }

    // --- AI Games (Rally & Legend) ---
    // You can interact with a game if you are a participant.
    match /rallyGames/{gameId} {
      allow read, write, create, delete: if isSignedIn() && isParticipant(resource);
    }

    match /legendGames/{gameId} {
      allow read, write, create, delete: if isSignedIn() && isParticipant(resource);
    }

    // --- Reports ---
    // Any signed-in user can create a report.
    match /reports/{reportId} {
        allow create: if isSignedIn();
    }
  }
}
