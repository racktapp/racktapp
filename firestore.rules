rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Allow read/write access for the next 30 days for testing.
      // This rule will expire and needs to be replaced with secure rules for production.
      allow read, write: if request.time < timestamp.date(2025, 9, 4);
    }
  }
}
