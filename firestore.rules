rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read all profiles but can only write to their own.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Reports can only be created. They cannot be read or updated by clients.
    match /reports/{reportId} {
      allow read, update, delete: if false;
      allow create: if request.auth != null;
    }

    // Generic rule for collections where participants need access.
    // This covers chats, challenges, matches, games, and tournaments.
    function isParticipant(collection) {
      return request.auth.uid in resource.data[collection];
    }

    match /chats/{chatId} {
      allow read, update, delete: if isParticipant('participantIds');
      // Messages can be created by participants. Deletion/updates are disallowed for integrity.
      match /messages/{messageId} {
        allow read: if isParticipant('participantIds');
        allow create: if request.auth.uid == request.resource.data.senderId && isParticipant('participantIds');
        allow update, delete: if false;
      }
    }

    match /challenges/{challengeId} {
      allow read, update, create, delete: if request.auth.uid == resource.data.fromId || request.auth.uid == resource.data.toId;
    }

    // Open challenges can be read by anyone, but only created/deleted by the poster.
    match /openChallenges/{challengeId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth.uid == request.resource.data.posterId;
      allow update: if false;
    }

    match /friendRequests/{requestId} {
      allow read, create, delete: if request.auth.uid == resource.data.fromId || request.auth.uid == resource.data.toId;
      allow update: if false;
    }

    match /matches/{matchId} {
      allow read, create, update: if isParticipant('participants');
      allow delete: if false;
    }
    
    match /tournaments/{tournamentId} {
        allow read, update: if isParticipant('participantIds');
        allow create: if request.auth.uid == request.resource.data.organizerId;
        allow delete: if request.auth.uid == resource.data.organizerId;
    }
    
    match /rallyGames/{gameId} {
        allow read, update, delete: if isParticipant('participantIds');
        allow create: if isParticipant('participantIds');
    }
    
    match /legendGames/{gameId} {
        allow read, update, delete: if isParticipant('participantIds');
        allow create: if isParticipant('participantIds');
    }

    // Practice sessions are private to each user.
    match /users/{userId}/practiceSessions/{sessionId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
